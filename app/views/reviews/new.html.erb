<div class="container p-3 mt-4 border rounded w-50 bg-light">
  <h1>Review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content  %>
    <%= f.input :rating, collection: (1..5) %>
    <br>
    <%= f.submit %>
  <% end %>
  <br>
  <%= link_to 'Back', restaurant_path(@restaurant), class: "btn btn-dark" %>
</div>
